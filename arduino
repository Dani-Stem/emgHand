#include <Servo.h>
Servo myservo;  
Servo myservo1; 
Servo myservo2; 
Servo myservo3; 
Servo myservo4; 
int pos = 0;   
void setup() 
{
  Serial.begin(9600);
    myservo.attach(3);  
    myservo1.attach(5);  
    myservo2.attach(9);  
    myservo3.attach(10);  
    myservo4.attach(11);  
}
void loop() 
{
  float sensorValue = analogRead(A1); //The muscle read could be set to a range that result in a boolean. sensor(0 - 200) = false; sensor(201 - 400) = true.
  float millivolt = (sensorValue/1023)*5;
  Serial.print("Sensor Value: ");
  Serial.println(sensorValue);
  Serial.print("Voltage: ");
  Serial.print(millivolt*1000);
  Serial.println(" mV");
  Serial.println("");
  delay(1);  
  if (analogRead(A1) >= 400)//could be a digital read
  {
      for (pos = 0; pos <= 180; pos += 1) { 
        myservo.write(pos);  
        myservo1.write(pos);  
        myservo2.write(pos);  
        myservo3.write(pos);  
        myservo4.write(pos);       
        delay(15);
        //Serial.print(analogRead(A1));
        // Serial.print(pos); //uncomment :D
        }
      } //if else statement
   else {
      for (pos = 180; pos <= 0; pos -= 1) {
        myservo.write(pos);
        myservo1.write(pos);  
        myservo2.write(pos);  
        myservo3.write(pos);  
        myservo4.write(pos);               
        delay(15);   
      } 
    }
}
